#!/usr/bin/env ruby
# encoding: utf-8

module Sword
  require 'optparse'
  require 'pathname'
  require Pathname.new(__FILE__).dirname.realpath.to_s + '/../lib/main'

  OptionParser.new do |o|
    @options = {}
    o.summary_width = 18
    o.on('-b', '--build <file>', 'Build project into zip/folder') { Application.export!(@options) }
    o.on('--debug', 'Run server noisily') { @options[:debug] = true }
    o.on('-d', '--dir <name>', 'Specify project directory') { |d| @options[:directory] = d }
    o.on('-g', '--gem <name>', 'Add a gem to require') { |g| open(REQUIRED, 'a') { |f| f.puts g }
      puts "`#{g}` will be loaded next time you run Sword."; exit }
    o.on('-h', '--help', 'Print this message') { puts o; exit }
    o.on('-i', '--install', 'Try to install must-have gems') { exec 'gem install ' + SETTINGS[:gems].map { |n| n.respond_to?(:first) ? n.last : n } * ' '; exit }
    o.on('-o', '--out <io>', 'Specify IO, STDERR by default') { @options[:out] = STDERR }
    o.on('-p', '--port <num>', 'Change the port, 1111 by default') { |p| @options[:port] = p }
    o.on('-s', '--server <uri>', 'Export into remote folder') { exit }
    o.on('--silent', 'Turn off any messages') { @options[:silent] = true }
    o.on('-v', '--version', 'Print Swordâ€™s version') { puts 'Sword ' + VERSION; exit }
  end.parse!
  Application.run!(@options)
end
