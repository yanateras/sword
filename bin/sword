#!/usr/bin/env ruby

module Sword; class Interface; class << self
  def version; puts "Sword #{Sword.version}" end
  alias v version
  
  def build
    require "./build"
    Build.run!
  end
  def run
    Sword.run!
  end
  def help
    puts "Usage: sword [<gem>/build/version]",
    "Require a gem: `sword <gemname>`",
    "Build your project: `sword build`"
  end
end end end

ARGV[0].nil? ? Sword::Application.run : Sword::Interface.send(ARGV[0].gsub '-', '')
